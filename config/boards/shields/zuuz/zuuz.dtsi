#include <dt-bindings/zmk/matrix_transform.h>

/ {

    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix_transform = &default_transform;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <16>;
        rows = <7>;
        map = <
	RC(4,4) RC(3,3) RC(2,2) RC(1,1) RC(0,0)                 RC(0,8)  RC(1,9) RC(2,10)  RC(3,11) RC(4,12) 
	RC(3,4) RC(2,3) RC(1,2) RC(0,1) RC(4,5)                 RC(4,13) RC(0,9) RC(1,10)  RC(2,11) RC(3,12) 
	RC(1,4) RC(0,3) RC(2,5) RC(5,1) RC(4,0)                 RC(4,8)  RC(5,9) RC(2,13)  RC(0,11) RC(1,12)
	                          RC(3,7) RC(4,7) RC(5,7)   RC(5,15) RC(4,15) RC(3,15) 

				RC(6,4)                                           	RC(6,12)
	         RC(6,0) RC(6,2)							          RC(6,10)   RC(6,8)
				RC(6,6)										   	    RC(6,14)
        >;
    };
	 
    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
		
		diode-direction = "col2row";
		
		row-gpios
        = <&pro_micro 4 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Row A from the schematic file
            , <&pro_micro 5 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Row B from the schematic file
            , <&pro_micro 6 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Row C from the schematic file
            , <&pro_micro 7 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Row D from the schematic file
            , <&pro_micro 8 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Row E from the schematic file
            , <&pro_micro 9 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Row E from the schematic file
            , <&pro_micro 10 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Row E from the schematic file 
			;
    };
	
  left_encoder: left_encoder {
        compatible = "alps,ec11";
        steps = <20>;

        a-gpios = <&pro_micro 2 (GPIO_ACTIVE_LOW | GPIO_PULL_DOWN)>;
        b-gpios = <&pro_micro 3 (GPIO_ACTIVE_LOW | GPIO_PULL_DOWN)>;
    };

    right_encoder: right_encoder {
        compatible = "alps,ec11";
        steps = <20>;

        a-gpios = <&pro_micro 3 (GPIO_ACTIVE_LOW | GPIO_PULL_DOWN)>;
        b-gpios = <&pro_micro 2 (GPIO_ACTIVE_LOW | GPIO_PULL_DOWN)>;
    };
};